{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "stock": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "price": {
      "type": "float",
      "required": true,
      "min": 0
    },
    "weightInGrams": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "condition": {
      "type": "enumeration",
      "enum": [
        "new",
        "second"
      ],
      "required": true
    },
    "description": {
      "type": "text"
    },
    "picture": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "users_permissions_user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "products"
    }
  }
}
